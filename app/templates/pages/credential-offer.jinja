{% extends('layouts/base.jinja') %}
{% block page %}
<div class="page-body">
    <div class="container-xl">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Credential Offer Card -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h3 class="card-title">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon me-2">
                                <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                                <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
                            </svg>
                            Credential Offer
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-lg-5">
                                <div class="d-flex align-items-center mb-4 mb-lg-0">
                                    {% set issuer = offer.get('issuer', {}) if offer.get('issuer') is mapping else {} %}
                                    {% set issuer_image = issuer.get('image', '') %}
                                    {% set issuer_name = issuer.get('name', 'Unknown') %}
                                    {% set issuer_id = issuer.get('id', '') %}
                                    
                                    {% if issuer_image %}
                                    <span class="avatar avatar-lg me-3" style="background-image: url({{ issuer_image }}); flex-shrink: 0;"></span>
                                    {% else %}
                                    <span class="avatar avatar-lg credential-identicon me-3" 
                                          data-did="{{ issuer_id }}"
                                          style="font-size: 1rem; flex-shrink: 0;">
                                    </span>
                                    {% endif %}
                                    
                                    <div class="flex-fill" style="min-width: 0;">
                                        <h4 class="mb-1 text-truncate">{{ offer.get('credential_name', 'Credential') }}</h4>
                                        <p class="text-muted mb-0 text-truncate">
                                            {% if offer.get('issuer') is mapping %}
                                            {{ offer.get('issuer', {}).get('name', 'Unknown Issuer') }}
                                            {% else %}Unknown Issuer{% endif %}
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-7">
                                <!-- Credential Preview -->
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="card-title mb-0">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon me-2">
                                                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                                                <circle cx="9" cy="7" r="4"></circle>
                                                <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                                                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                            </svg>
                                            Attributes
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row g-2">
                                            {% if offer.get('attributes') %}
                                                {% for key, value in offer.get('attributes', {}).items() %}
                                                <div class="col-6">
                                                    <small class="text-muted d-block">{{ key|title }}</small>
                                                    <div class="fw-bold">{{ value }}</div>
                                                </div>
                                                {% endfor %}
                                            {% else %}
                                                <div class="col-12 text-center text-muted">
                                                    <small>Attributes will be revealed after acceptance</small>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Information Card -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h3 class="card-title">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon me-2">
                                <circle cx="12" cy="12" r="10"></circle>
                                <line x1="12" y1="16" x2="12" y2="12"></line>
                                <line x1="12" y1="8" x2="12.01" y2="8"></line>
                            </svg>
                            What You're Receiving
                        </h3>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon text-success me-2">
                                    <polyline points="20 6 9 17 4 12"></polyline>
                                </svg>
                                <strong>Verifiable Credential:</strong> Cryptographically secure digital credential
                            </li>
                            <li class="mb-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon text-success me-2">
                                    <polyline points="20 6 9 17 4 12"></polyline>
                                </svg>
                                <strong>Privacy Control:</strong> You choose when and what to share
                            </li>
                            <li class="mb-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon text-success me-2">
                                    <polyline points="20 6 9 17 4 12"></polyline>
                                </svg>
                                <strong>Secure Storage:</strong> Stored safely in your wallet
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="card">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <button class="btn btn-outline-danger w-100" onclick="declineOffer()">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon me-2">
                                        <line x1="18" y1="6" x2="6" y2="18"></line>
                                        <line x1="6" y1="6" x2="18" y2="18"></line>
                                    </svg>
                                    Decline
                                </button>
                            </div>
                            <div class="col-sm-6">
                                <button class="btn btn-success w-100" onclick="acceptOffer()" id="accept-btn">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon me-2">
                                        <polyline points="20 6 9 17 4 12"></polyline>
                                    </svg>
                                    Accept Credential
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Processing Modal -->
<div class="modal modal-blur fade" id="processing-modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body text-center py-5">
                <div class="mb-3" id="credential-spinner">
                    <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                        <span class="visually-hidden">Processing...</span>
                    </div>
                </div>
                <div class="mb-3" id="credential-success" style="display: none; opacity: 0; transition: opacity 0.5s ease-in;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="icon text-success" style="filter: drop-shadow(0 0 8px rgba(40, 167, 69, 0.3));">
                        <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                </div>
                <h4 id="processing-text">Processing...</h4>
                <p class="text-muted mb-0" id="processing-detail">Please wait while we process your request</p>
            </div>
        </div>
    </div>
</div>

<script>
const exchangeId = '{{ exchange_id }}';

let credentialEventSource = null;

function acceptOffer() {
    const processingModal = new bootstrap.Modal(document.getElementById('processing-modal'));
    document.getElementById('processing-text').textContent = 'Accepting Credential...';
    document.getElementById('processing-detail').textContent = 'Sending request to issuer...';
    processingModal.show();

    // Listen for credential_received SSE event
    credentialEventSource = new EventSource('{{ url_for("main.notification_stream") }}');
    
    credentialEventSource.onmessage = function(event) {
        const data = JSON.parse(event.data);
        
        if (data.type === 'credential_received' && data.data.exchange_id === exchangeId) {
            console.log('âœ… Credential received via SSE:', data.data.credential_name);
            
            // Fade out spinner
            const spinner = document.getElementById('credential-spinner');
            spinner.style.transition = 'opacity 0.3s ease-out';
            spinner.style.opacity = '0';
            
            setTimeout(() => {
                spinner.style.display = 'none';
                
                // Show success checkmark with fade-in
                const successIcon = document.getElementById('credential-success');
                successIcon.style.display = 'block';
                setTimeout(() => {
                    successIcon.style.opacity = '1';
                }, 10);
                
                // Update text
                document.getElementById('processing-text').textContent = 'Credential Received!';
                document.getElementById('processing-detail').textContent = `${data.data.credential_name} added to your wallet`;
                
                // Close SSE connection
                credentialEventSource.close();
                
                // Wait to let user see the success state, then fade out modal
                setTimeout(() => {
                    const modalElement = document.querySelector('.modal.show');
                    if (modalElement) {
                        modalElement.style.transition = 'opacity 0.4s ease-out';
                        modalElement.style.opacity = '0';
                    }
                    
                    // Redirect after fade completes
                    setTimeout(() => {
                        window.location.href = '{{ url_for("main.index") }}';
                    }, 400);
                }, 1800); // Show success for 1.8 seconds
            }, 300);
        }
    };
    
    credentialEventSource.onerror = function(error) {
        console.error('SSE error during credential acceptance:', error);
        credentialEventSource.close();
    };

    fetch(`{{ url_for('credentials.accept_credential_offer', exchange_id='EXCHANGE_ID') }}`.replace('EXCHANGE_ID', exchangeId), {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.status === 'success') {
            // Request sent successfully, now wait for SSE event
            document.getElementById('processing-text').textContent = 'Waiting for Credential...';
            document.getElementById('processing-detail').textContent = 'Issuer is preparing your credential';
        } else {
            throw new Error(data.message || 'Failed to accept credential offer');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        if (credentialEventSource) credentialEventSource.close();
        processingModal.hide();
        alert('Failed to accept credential: ' + error.message);
    });
}

function declineOffer() {
    if (!confirm('Are you sure you want to decline this credential offer?')) {
        return;
    }

    const processingModal = new bootstrap.Modal(document.getElementById('processing-modal'));
    document.getElementById('processing-text').textContent = 'Declining Offer...';
    processingModal.show();

    fetch(`{{ url_for('credentials.decline_credential_offer', exchange_id='EXCHANGE_ID') }}`.replace('EXCHANGE_ID', exchangeId), {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        }
    })
    .then(response => response.json())
    .then(data => {
        document.getElementById('processing-text').textContent = 'Offer Declined';
        setTimeout(() => {
            window.location.href = '{{ url_for("main.index") }}';
        }, 1500);
    })
    .catch(error => {
        console.error('Error:', error);
        processingModal.hide();
        alert('Failed to decline offer: ' + error.message);
    });
}

// Generate identicon color from DID
function didToColor(did) {
    if (!did) return '#999';
    
    let hash = 0;
    for (let i = 0; i < did.length; i++) {
        hash = did.charCodeAt(i) + ((hash << 5) - hash);
    }
    
    const hue = Math.abs(hash % 360);
    return `hsl(${hue}, 65%, 55%)`;
}

// Get initials from DID (last 2 alphanumeric chars)
function getInitialsFromDID(did) {
    if (!did) return '?';
    // Extract alphanumeric characters from DID
    const alphanumeric = did.replace(/[^a-zA-Z0-9]/g, '');
    if (alphanumeric.length === 0) return '?';
    if (alphanumeric.length === 1) return alphanumeric.toUpperCase();
    // Use last 2 characters for more uniqueness
    return alphanumeric.slice(-2).toUpperCase();
}

// Initialize identicons on page load
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.credential-identicon').forEach(avatar => {
        const did = avatar.dataset.did;
        
        const color = didToColor(did);
        const initials = getInitialsFromDID(did);
        
        avatar.style.backgroundColor = color;
        avatar.style.color = 'white';
        avatar.style.fontWeight = '600';
        avatar.style.display = 'flex';
        avatar.style.alignItems = 'center';
        avatar.style.justifyContent = 'center';
        avatar.textContent = initials;
    });
});
</script>
{% endblock %}


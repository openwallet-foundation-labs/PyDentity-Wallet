<!-- Notification Modal -->
<div class="modal modal-blur fade" id="notification-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon me-2">
                        <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                        <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
                    </svg>
                    Notifications
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {% if session.get('notifications', []) %}
                    <div class="list-group list-group-flush">
                        {% for notification in session.get('notifications', []) %}
                        <div class="list-group-item">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    {% if notification.get('type') == 'cred_offer' %}
                                    <span class="bg-green text-white avatar">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon">
                                            <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                                            <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
                                        </svg>
                                    </span>
                                    {% elif notification.get('type') == 'pres_request' %}
                                    <span class="bg-blue text-white avatar">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon">
                                            <path d="M14.5 4h-5L7 7H4a2 2 0 0 0-2 2v9a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-3l-2.5-3z"></path>
                                            <circle cx="12" cy="13" r="3"></circle>
                                        </svg>
                                    </span>
                                    {% else %}
                                    <span class="bg-secondary text-white avatar">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon">
                                            <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                                            <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
                                        </svg>
                                    </span>
                                    {% endif %}
                                </div>
                                <div class="col text-truncate">
                                    <div class="d-block fw-bold">{{ notification.get('title', 'Notification') }}</div>
                                    <div class="d-block text-secondary">
                                        {% if notification.get('type') == 'cred_offer' %}
                                        Credential offer received
                                        {% elif notification.get('type') == 'pres_request' %}
                                        Presentation request received
                                        {% else %}
                                        {{ notification.get('type', 'Unknown') }}
                                        {% endif %}
                                    </div>
                                    <div class="d-block text-muted small">
                                        {{ notification.get('timestamp', '') }}
                                    </div>
                                </div>
                                <div class="col-auto">
                                    {% if notification.get('type') == 'cred_offer' %}
                                    <a href="{{ url_for('main.credential_offer', exchange_id=notification.get('details', {}).get('exchange_id', '')) }}" class="btn btn-sm btn-primary">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon me-1">
                                            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                            <circle cx="12" cy="12" r="3"></circle>
                                        </svg>
                                        View Details
                                    </a>
                                    {% elif notification.get('type') == 'pres_request' %}
                                    <button class="btn btn-sm btn-primary" onclick="respondToPresentation('{{ notification.get('details', {}).get('exchange_id', '') }}')">
                                        Respond
                                    </button>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                {% else %}
                <div class="empty">
                    <div class="empty-img">
                        <img src="https://preview.tabler.io/static/illustrations/undraw_notify_re_65on.svg" height="128" alt="">
                    </div>
                    <p class="empty-title">No notifications</p>
                    <p class="empty-subtitle text-secondary">
                        You're all caught up! New credential offers and presentation requests will appear here.
                    </p>
                </div>
                {% endif %}
            </div>
            {% if session.get('notifications', []) %}
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="markAllAsRead()">Mark All as Read</button>
            </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
function acceptCredentialOffer(exchangeId) {
    console.log('Accepting credential offer:', exchangeId);
    
    // Show loading state
    const button = event.target;
    const originalText = button.textContent;
    button.textContent = 'Accepting...';
    button.disabled = true;
    
    fetch(`{{ url_for('main.accept_credential_offer', exchange_id='EXCHANGE_ID') }}`.replace('EXCHANGE_ID', exchangeId), {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.status === 'success') {
            // Show success message
            showToast('Credential offer accepted!', 'success');
            // Close modal and refresh page
            setTimeout(() => {
                location.reload();
            }, 1500);
        } else {
            throw new Error(data.message || 'Failed to accept credential offer');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        showToast('Failed to accept credential offer: ' + error.message, 'error');
        button.textContent = originalText;
        button.disabled = false;
    });
}

function declineCredentialOffer(exchangeId) {
    console.log('Declining credential offer:', exchangeId);
    
    if (!confirm('Are you sure you want to decline this credential offer?')) {
        return;
    }
    
    // Show loading state
    const button = event.target;
    const originalText = button.textContent;
    button.textContent = 'Declining...';
    button.disabled = true;
    
    fetch(`{{ url_for('main.decline_credential_offer', exchange_id='EXCHANGE_ID') }}`.replace('EXCHANGE_ID', exchangeId), {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.status === 'success') {
            showToast('Credential offer declined', 'info');
            setTimeout(() => {
                location.reload();
            }, 1500);
        } else {
            throw new Error(data.message || 'Failed to decline credential offer');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        showToast('Failed to decline credential offer: ' + error.message, 'error');
        button.textContent = originalText;
        button.disabled = false;
    });
}

function respondToPresentation(exchangeId) {
    console.log('Responding to presentation request:', exchangeId);
    // For now, just show a message - this would need more complex logic
    showToast('Presentation response functionality coming soon!', 'info');
}

function markAllAsRead() {
    console.log('Marking all notifications as read');
    // For now, just reload the page
    showToast('Marking all as read...', 'info');
    setTimeout(() => {
        location.reload();
    }, 1000);
}

function showToast(message, type = 'info') {
    // Create a simple toast notification
    const toast = document.createElement('div');
    toast.className = `alert alert-${type === 'error' ? 'danger' : type === 'success' ? 'success' : 'info'} alert-dismissible position-fixed`;
    toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
    toast.innerHTML = `
        ${message}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    `;
    
    document.body.appendChild(toast);
    
    // Auto-remove after 5 seconds
    setTimeout(() => {
        if (toast.parentNode) {
            toast.parentNode.removeChild(toast);
        }
    }, 5000);
}
</script>
